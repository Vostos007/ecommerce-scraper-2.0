# JWT configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRES_IN=8h
JWT_ISSUER=scraper-dashboard
JWT_AUDIENCE=dashboard-users

# Password hashing
BCRYPT_ROUNDS=12
PASSWORD_HASH_ALGO=bcrypt

# Session and security settings
SESSION_TIMEOUT=28800
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_WINDOW=900
SECURE_COOKIES=false
FORCE_HTTPS=false
ENABLE_2FA=false

# Application environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3055
PORT=3055
PYTHON_BIN=python3
NEXT_PUBLIC_DASHBOARD_AUTH_DISABLED=true
DASHBOARD_AUTH_DISABLED=true
DASHBOARD_AUTH_BYPASS_ID=admin-001
DASHBOARD_AUTH_BYPASS_USERNAME=admin
DASHBOARD_AUTH_BYPASS_ROLE=admin
AUDIT_LOG_RETENTION_DAYS=90
USER_STORE_PATH=../../config/users.json

# Database (future use)
DATABASE_URL=sqlite:./data/auth.db
DATABASE_ENCRYPTION_KEY=
